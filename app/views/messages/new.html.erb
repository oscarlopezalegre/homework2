


<div class="signup-form col-sm-4 col-md-4 col-md-offset-4">
  <%= form_for(:message, :url => messages_path, :method => "post") do |f| %>
    <div class="form-group">
      <%= f.text_field 'subject', class: 'form-control', placeholder: 'Subject' %>
    </div>
    <div class="form-group">
      <%= f.text_area 'content', class: 'form-control', placeholder: 'Content' %>
    </div>
     <div class="form-group">

		<select name="message[recipient]" id="message_recipient">
		<% @friend_list.each do |i|%>
			<option value="<%=i.id%>"> <%= i.name %></option>
		<% end  %>
		</select>
    </div>

    <div class="form-group">
      <%= f.file_field 'imagefile', class: 'form-control' %>
  
      </div>

    <div class="form-group">
        <%= f.submit 'Send', class: 'btn btn-block btn-info' %>
    </div>
  <% end %>
</div>  

</div>  