<div class="signup-form">
  <%= form_for(:message, :url => messages_path, :method => "post") do |f| %>
    <div class="form-group">
      <%= f.text_field 'content', class: 'form-control', placeholder: 'Your E-mail' %>
    </div>
     <div class="form-group">

		<select name="message[recipient]" id="message_recipient">
		<% @friend_list.each do |i|%>
			<option value="<%=i.id%>"> <%= i.name %></option>
		<% end  %>
		</select>
    </div>

    <div class="form-group">
        <%= f.submit 'Send', class: 'btn btn-block btn-info' %>
    </div>
  <% end %>
</div>  

</div>  